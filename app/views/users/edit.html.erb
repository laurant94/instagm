<div class="container">
  <div class="">
    <%= form_for @user, url: profil_path, html: { multipart: true, }  do |f| %>
      <div class="row text-center">
        <div class="col-md">
          <%= image_tag( @user.avatar.url, width: '200px', height: '200px', class:'rounded-circle' ) if @user.avatar.present? %>
          <%= content_tag('p', @user.username, class: "text-center bold") %>
          <%= content_tag('small', @user.email, class: "text-center bold") %>
        </div>
      </div>
      <div class="mb-3">
        <%= f.text_field :firstname, placeholder: "Nom", class:"form-control form-control-sm" %>
      </div>
      <div class="mb-3">
        <%= f.text_field :lastname, placeholder: "Prénom", class:"form-control form-control-sm" %>
      </div>
      <div class="mb-3">
        <%= f.file_field :avatar, class: "form-control form-control-sm" %>
        <%= f.hidden_field :avatar_cache %>
      </div>
      <div class="form-group text-right">
        <%= f.submit 'Mettre à jour', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>